{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es5",
            "es2015",
            "es2016",
            "es2017"
        ],
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "lib",
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}